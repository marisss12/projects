'''Ссыла на гугл-док'''

# https://docs.google.com/document/d/1Xz8ObLhNZUFT_J-7mOzb3A_wUxa8sVbHSlqk2ZFvgIM/edit?tab=t.0


from typing import List
import sys


def delivery(weight_robots: List[int], limit: int) -> int:
    ''''Функция счета платформ''''

    weight_robots.sort()
    
    left = 0  # Указатель на легкого робота
    right = len(weight_robots) - 1  # Указатель на тяжелого робота
    count_platforms = 0  # Счетчик платформ

    while left <= right:
        # Если легкий и тяжелый роботы помещаются на одну платформу
        if weight_robots[left] + weight_robots[right] <= limit:
            left += 1  # Перевозим легкого робота
        # Перевозим тяжелого робота
        right -= 1
        count_platforms += 1  # Увеличиваем счетчик платформ

    return count_platforms


if __name__ == "__main__":
    
    input_data = sys.stdin.read().strip().split('\n')
    weights = list(map(int, input_data[0].split()))
    limit = int(input_data[1])
    
    result = delivery(weights, limit)
    print(result)
